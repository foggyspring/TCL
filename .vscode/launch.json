    "version": "0.2.0",
    "configurations": [



        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },

        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "spil.training",
            "args": [
                "trainer.gpus=-1",
                "datamodule.root_data_dir=path/to/dataset",
                "model.action_decoder.sg_chk_path=path/to/skill_generator",
                "datamodule/datasets=vision_lang"
            ],
            "console": "integratedTerminal"
            
        },
        {
            "name": "Python: Skill Generator",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/skill_generator/skill_generator/training.py",
            "args": [
                // "trainer.gpus=-1",
                "datamodule.root_data_dir=dataset/task_D_D"
            ],
            "console": "integratedTerminal",
            "env": {
                "WANDB_MODE": "dryrun"
            }
        }
    ]
}